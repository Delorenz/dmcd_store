<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
L'ajout de pourcentage permet de cliquer sur toute la ligne !
sinon il faut cliquer sur l'image ou le texte affichÃ©s par la ligne
//-->

    <ImageView
        android:id="@+id/ilc_visuel"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        app:layout_constraintWidth_percent=".15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ilc_titre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/text_liste"
        app:layout_constraintWidth_percent=".85"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ilc_visuel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"/>


</android.support.constraint.ConstraintLayout>

